{
  "name": "media-controller",
  "type": "module",
  "version": "0.0.0",
  "description": "Prototype for media controller based UI.",
  "license": "MIT",
  "contributors": [
    "Rahim Alwer <rahim.alwer@gmail.com>"
  ],
  "scripts": {
    "build": "run-s clean build:esm",
    "build:esm": "tsc -p tsconfig-build.json",
    "build:watch": "npm run build:esm -- -w",
    "build:fast": "node .scripts/fast-build",
    "clean": "run-p clean:*",
    "clean:build": "rimraf dist",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .ts --quiet . --ignore-path .gitignore",
    "lint:prettier": "prettier . --check --ignore-path .gitignore --loglevel warn",
    "format": "run-s format:*",
    "format:eslint": "npm run lint:eslint -- --fix",
    "format:prettier": "npm run lint:prettier -- --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "lit-element": "^2.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "@web/dev-server": "^0.0.19",
    "@web/dev-server-esbuild": "^0.2.6",
    "esbuild": "^0.11.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-lit": "^1.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-wc": "^1.2.0",
    "fast-glob": "^3.2.5",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.3",
    "lit-analyzer": "^1.2.1",
    "lit-html": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md,json}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  }
}
